<?xml version="1.0" encoding="UTF-8"?>
<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onPageLoaded">
    <ActionBar title="Login / Sign Up" />
    <StackLayout padding="20">
        <TextField hint="Email" id="email" keyboardType="email" autocorrect="false" autocapitalizationType="none" text="{{ email }}" />
        <TextField hint="Password" id="password" secure="true" text="{{ password }}" />
        <Button text="Sign In" tap="{{ onSignIn }}" />
        <Button text="Sign Up" tap="{{ onSignUp }}" />
    </StackLayout>
</Page> 